<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.icon256bliss.android.coursehandler">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@drawable/logo_widget"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Universities"
            android:label="@string/universities"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EnterPrerequisites"
            android:label="@string/title_activity_process_results"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OlevelSelector"
            android:label="@string/title_activity_olevel_selector"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EnterOlevelResults"
            android:label="@string/title_activity_enter_olevel_results"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AlevelSelector"
            android:label="@string/title_activity_alevel_selector"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EnterALevelResults"
            android:label="@string/title_activity_enter_alevel_results"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Calculate"
            android:label="@string/title_activity_calculate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HelpActivity"
            android:label="@string/topic_activity_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TopicActivity"
            android:label="@string/topic_activity_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FeedBack"
            android:label="@string/title_activity_feed_back"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CollegeListActivity"
            android:label="@string/title_college_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CollegeDetailActivity"
            android:label="@string/title_college_detail"
            android:parentActivityName=".CollegeListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.icon256bliss.android.coursehandler.CollegeListActivity" />
        </activity>
        <activity
            android:name=".CoursesListListActivity"
            android:label="@string/title_courseslist_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CoursesListDetailActivity"
            android:label="@string/title_courseslist_detail"
            android:parentActivityName=".CoursesListListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.icon256bliss.android.coursehandler.CoursesListListActivity" />
        </activity>
        <activity
            android:name=".ProcessedChoicesListActivity"
            android:label="@string/title_processedchoices_list"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ProcessedChoicesDetailActivity"
            android:label="@string/title_processedchoices_detail"
            android:parentActivityName=".ProcessedChoicesListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.icon256bliss.android.coursehandler.ProcessedChoicesListActivity" />
        </activity>
    </application>

</manifest>